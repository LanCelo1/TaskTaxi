<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="style_bottom_frame">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_bottom_item</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ItemMenuApperance" parent="">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="ItemMenuNormalApperance" parent="ItemMenuApperance">
        <item name="fontFamily">@font/roboto_regular</item>

        <item name="layout_marginBaseline" tools:targetApi="o">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="ItemMenuSmallApperance" parent="ItemMenuApperance">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="iconSize">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="DialogApperance" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:positiveButtonText">@color/colorPrimary</item>
        <item name="android:negativeButtonText">@color/colorPrimary</item>
    </style>
</resources>